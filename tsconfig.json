{
  "version": "3.2.2",
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@code/*": ["src/renderer/*"],
      "*": ["node_modules/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    // "noEmitOnError": true,

    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    // "strictBindCallApply": true,
    // "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true
  }
}
