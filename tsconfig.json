{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./dist",
		"paths": {
      "commands/*": ["renderer/commands/*"],
      "components/*": ["renderer/components/*"],
      "services/*": ["renderer/services/*"],
			"*": ["node_modules/*"]
		},
		"module": "commonjs",
		"moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "sourceMap": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*"]
}
