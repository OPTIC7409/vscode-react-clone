{
  "version": "3.8.2",
  "include": ["src/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@code/*": ["src/renderer/*"]
    },
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "noEmitOnError": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    // "removeComments": true,

    "noFallthroughCasesInSwitch": true,

    "inlineSources": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "newLine": "lf"
  }
}
