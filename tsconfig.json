{
  "version": "3.2.2",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/renderer/*"],
      "common/*": ["src/common/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    // "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "files": ["src/main/index.ts", "src/renderer/index.tsx"]
}
